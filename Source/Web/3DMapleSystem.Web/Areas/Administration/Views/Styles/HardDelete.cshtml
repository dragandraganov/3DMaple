@using _3DMapleSystem.Web.Areas.Administration.ViewModels
@model StyleViewModel

@{
    ViewBag.Title = "Hard Delete";
}

@using (Html.BeginForm("HardDelete", "Styles", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(pg => pg.CreatedOn)

    <h4>Total delete style "@Model.Name"</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(pg => pg.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(pg => pg.Name, new { @class = "form-control form-control-sm", @readonly = true })
        </div>
    </div>
    <h2 class="text-danger">Are you sure you want to delete this style permanently (not recomended)?</h2>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-danger btn-sm" value="Total Delete" />
            <a href="~/Administration/Styles/Index" class="btn btn-primary btn-lg">Cancel</a>
        </div>
    </div>
}

