@using _3DMapleSystem.Web.Areas.Administration.ViewModels
@model CategoryViewModel

@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm("Delete", "Categories", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(pg => pg.CreatedOn)

    <h4>Delete category "@Model.Name"</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(pg => pg.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(pg => pg.Name, new { @class = "form-control form-control-sm", @readonly = true })
        </div>
    </div>
    <div class="alert alert-danger">Are you sure you want to delete this category?</div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a href="~/Administration/Categories/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
}

