<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>3DMaple - @ViewBag.Title</title>
    <link rel="shortcut icon" type="image/ico" href="~/Content/Images/favicon.ico">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryConfirm")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/application")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-main navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <form id="__AjaxAntiForgeryForm" action="#" method="post">@Html.AntiForgeryToken()></form> 
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home", new { area = string.Empty })">
                    <img src="~/Content/Images/LogoRender.png" alt="3D Maple" class="img-responsive logo-img">
                </a>
                @*@Html.ActionLink("3DMaple", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_Search")
                
                @*<form class="navbar-form navbar-left navbar-input-group" role="search">
                    <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search...">
                    </div>
                    <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                </form>*@
                <ul class="nav navbar-nav ml10" style="line-height:4em">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole(_3DMapleSystem.Common.GlobalConstants.AdminRole))
                        {
                            <li>
                                <div class="dropdown">
                                    <button class="btn btn-xs btn-info dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                                        Admin
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                        <li>@Html.ActionLink("Admin Categories", "Index", "Categories", new { area = "Administration" }, null)</li>
                                        <li>@Html.ActionLink("Admin Sub-Categories", "Index", "SubCategories", new { area = "Administration" }, null)</li>
                                        <li>@Html.ActionLink("Admin Platforms", "Index", "Platforms", new { area = "Administration" }, null)</li>
                                        <li>@Html.ActionLink("Admin Sub-Platforms", "Index", "SubPlatforms", new { area = "Administration" }, null)</li>
                                        <li>@Html.ActionLink("Admin Styles", "Index", "Styles", new { area = "Administration" }, null)</li>
                                        <li>@Html.ActionLink("Admin Ranks", "Index", "Ranks", new { area = "Administration" }, null)</li>
                                        <li>@Html.ActionLink("Admin PolyModels", "Index", "PolyModels", new { area = "Administration" }, null)</li>
                                        <li>@Html.ActionLink("Admin Users", "Index", "Users", new { area = "Administration" }, null)</li>
                                    </ul>
                                </div>
                            </li>
                        }

                        @*else
                            {
                                <li>@Html.ActionLink("Manage my games", "Index", "ManagePartyGames", new { area = string.Empty, index = "ownGames" }, null)</li>
                                <li>@Html.ActionLink("My favorite games", "Index", "ManagePartyGames", new { area = string.Empty, index = "favoriteGames" }, null)</li>
                            }*@
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            @*<div style="margin-left:81px; padding-left:15px; margin-top:-0px;">Hello</div>*@
        </div>
    </div>
    <div class="container body-content">
        @*<div class="span12">
            @Html.MvcSiteMap().SiteMapPath("BootstrapSiteMapPathHelperModel")
        </div>*@
        @RenderBody()
        <footer>
            <hr />
            <p id="author-sign">Powered By Dragan Draganov | e-mail: dragan.mdraganov@yahoo.com | Copyright &copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
